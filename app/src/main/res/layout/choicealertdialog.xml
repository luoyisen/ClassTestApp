<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/choiceedittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="3dp"
            android:layout_marginTop="6dp"
            android:text="这是内容"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:background="@color/darkblue"
            android:editable="false"/>
    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <CheckBox
            android:id="@+id/choicea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/roundedcornerbakground"
            android:padding="4dp"
            android:text="A: 0x3f"
            android:textColor="@color/black"
            android:textSize="@dimen/choicefontsize"/>

        <CheckBox
            android:id="@+id/choiceb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/roundedcornerbakground"
            android:padding="4dp"
            android:text="B: 0x5b"
            android:textColor="@color/black"
            android:textSize="@dimen/choicefontsize" />

        <CheckBox
            android:id="@+id/choicec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/roundedcornerbakground"
            android:padding="4dp"
            android:text="C: 0x66"
            android:textColor="@color/black" android:textSize="@dimen/choicefontsize"/>

        <CheckBox
            android:id="@+id/choiced"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/roundedcornerbakground"
            android:padding="4dp"
            android:text="D: 0x7d"
            android:textColor="@color/black" android:textSize="@dimen/choicefontsize"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/rechose_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/rightrounded"
                android:padding="4dp"
                android:text="重选"
                android:textColor="#000000"
                android:textSize="@dimen/choicefontsize" />

            <Button
                android:id="@+id/confirm_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/falserounded"
                android:padding="4dp"
                android:text="确定"
                android:textColor="#000000"
                android:textSize="@dimen/choicefontsize" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>
